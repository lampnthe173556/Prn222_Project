@section Scripts
{
    <script>
        let table;
        let deleteId = 0;

        $(document).ready(function () {
            // Custom filtering function
            $.fn.dataTable.ext.search.push(function(settings, data, dataIndex, rowData) {
                // Get filter values
                const name = $('#nameFilter').val().toLowerCase();
                const status = $('#statusFilter').val();

                // Name filter
                if (name && !rowData.categoryName.toLowerCase().includes(name)) {
                    return false;
                }

                // Status filter
                if (status !== '' && rowData.status != status) {
                    return false;
                }

                return true;
            });

            // Initialize DataTable
            table = $('#categoriesTable').DataTable({
                ajax: {
                    url: '/Admin/Categories/GetCategories',
                    type: 'GET',
                    dataSrc: 'data'
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return meta.row + 1;
                        }
                    },
                    { data: 'categoryName' },
                    {
                        data: 'status',
                        render: function (data) {
                            return data == 1 ? 
                                '<span class="badge badge-success">Active</span>' : 
                                '<span class="badge badge-danger">Inactive</span>';
                        }
                    },
                    { data: 'description' },
                    {
                        data: 'categoryId',
                        render: function (data) {
                            return `
                                <button class="btn btn-sm btn-info" onclick="showEditModal(${data})">
                                    <i class="fas fa-edit"></i>
                                </button>
                               
                            `;
                        }
                    }
                ]
            });
             // <button class="btn btn-sm btn-danger" onclick="showDeleteModal(${data})">
             //                        <i class="fas fa-trash"></i>
             //                    </button>
            // Add event listeners for filter inputs
            $('#nameFilter').on('input', function() {
                table.draw();
            });

            $('#statusFilter').on('change', function() {
                table.draw();
            });
        });

        function showCreateModal() {
            $('#categoryId').val('');
            $('#categoryForm')[0].reset();
            $('#categoryModalLabel').text('Create Category');
            $('#categoryModal').modal('show');
        }

        function showEditModal(id) {
            $.get('/Admin/Categories/GetCategory/' + id, function (response) {
                if (response.success) {
                    const category = response.data;
                    $('#categoryId').val(category.categoryId);
                    $('#categoryName').val(category.categoryName);
                    $('#status').val(category.status);
                    $('#description').val(category.description);
                    $('#categoryModalLabel').text('Edit Category');
                    $('#categoryModal').modal('show');
                } else {
                    toastr.error(response.message);
                }
            });
        }

        function showDeleteModal(id) {
            deleteId = id;
            $('#deleteModal').modal('show');
        }

        function saveCategory(e) {
            e.preventDefault();
            const form = $('#categoryForm');
            const id = $('#categoryId').val();
            const url = id ? '/Admin/Categories/Edit' : '/Admin/Categories/Create';
            
            $.ajax({
                url: url,
                type: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#categoryModal').modal('hide');
                        table.ajax.reload();
                        toastr.success(response.message);
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function () {
                    toastr.error('An error occurred');
                }
            });
        }

        function deleteCategory() {
            if (!deleteId) return;

            $.ajax({
                url: '/Admin/Categories/Delete/' + deleteId,
                type: 'POST',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    $('#deleteModal').modal('hide');
                    if (response.success) {
                        table.ajax.reload();
                        toastr.success(response.message);
                    } else {
                        toastr.error(response.message);
                    }
                    deleteId = 0;
                },
                error: function () {
                    toastr.error('An error occurred');
                    deleteId = 0;
                }
            });
        }
    </script>
}
