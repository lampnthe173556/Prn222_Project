@{
    var user = ViewBag.User as EcormerProjectPRN222.Models.Account;
    var cart = ViewBag.CartItems as List<EcormerProjectPRN222.Models.CartItem>;
}
<header class="header trans_300">
    <!-- Top Navigation -->
    <div class="top_nav">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="top_nav_left">free shipping on all u.s orders over $50</div>
                </div>
                <div class="col-md-6 text-right">
                    <div class="top_nav_right">
                        <ul class="top_nav_menu">
                            <li class="account">
                                @if (user == null)
                                {
                                    <a href="~/Login/Index">
                                        Login
                                    </a>
                                }
                                else
                                {
                                    <a href="~/Login/Logout">
                                        Logout
                                    </a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Navigation -->
    <div class="main_nav_container">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-right">
                    <div class="logo_container">
                        <a href="~/Home/Index">colo<span>shop</span></a>
                    </div>
                    <nav class="navbar">
                        <ul class="navbar_menu">
                            <li><a href="~/Home/Index">home</a></li>
                            <li><a href="~/Shop/Index">shop</a></li>
                            <li><a href="~/Contact/Index">contact</a></li>
                        </ul>
                        <ul class="navbar_user">
                            @if (user != null)
                            {
                                <li><a href="~/Profile/Index"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                            }
                            <li class="checkout">
                                <a href="~/Cart/Index">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    <span id="checkout_items" class="checkout_items">@(cart != null ? cart.Count : 0)</span>
                                </a>
                            </li>
                        </ul>
                        <div class="hamburger_container">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>