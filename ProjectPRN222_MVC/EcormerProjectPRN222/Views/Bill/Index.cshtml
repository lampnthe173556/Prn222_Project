@model EcormerProjectPRN222.Models.BillViewModel
<head>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

</head>
<body>
<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    @if (Model?.Order != null)
                    {
                        <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>ID: @Model.Order.OrderId</strong></p>
                    }
                    else
                    {
                        <p class="text-danger">Order not found.</p>
                    }
                </div>
                <div class="col-xl-3 float-end">
                    <a data-mdb-ripple-init class="btn btn-light text-capitalize border-0" data-mdb-ripple-color="dark">
                        <i class="fas fa-print text-primary"></i> Print
                    </a>
                    <a data-mdb-ripple-init class="btn btn-light text-capitalize" data-mdb-ripple-color="dark">
                        <i class="far fa-file-pdf text-danger"></i> Export
                    </a>
                </div>
                <hr>
            </div>

            <div class="container">
                <div class="col-md-12">
                    <div class="text-center">
                        <i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>
                        <p class="pt-0">MDBootstrap.com</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-6">
                            <ul class="list-unstyled">
                                <li class="text-muted mb-2">
                                    <strong>To:</strong> <span style="color:#5d9fc5;">@Model.Order.FullName</span>
                                </li>
                                <li class="text-muted mb-2">
                                    <i class="fas fa-map-marker-alt"></i> <strong>Location:</strong> @Model.Order.LocationOrder
                                </li>
                                <li class="text-muted">
                                    <i class="fas fa-phone"></i> <strong>Phone:</strong> @Model.Order.PhoneNumber
                                </li>
                            </ul>
                    </div>
                    <div class="col-xl-6">
                        <p class="text-muted">Invoice</p>
                        <ul class="list-unstyled">
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">ID:</span>@Model.Order.OrderId
                            </li>
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">Creation Date: </span>@Model.Order.OrderDate
                            </li>
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                                    @Model.Order.Status
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Description</th>
                                <th scope="col">Qty</th>
                                <th scope="col">Unit Price</th>
                                <th scope="col">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.OrderDetails != null && Model.OrderDetails.Any())
                            {
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <th scope="row">@item.ProductId</th>
                                        <td>@item.Product?.ProductName</td>
                                        <td>@item.Quanity</td>
                                        <td>@item.Price</td>
                                        <td>@(item.Quanity * item.Price)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-center text-danger">No order details found.</td></tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-xl-8">
                        <p class="ms-3">Add additional notes and payment information</p>
                    </div>
                    <div class="col-xl-3">
                        <ul class="list-unstyled">
                            <li class="text-muted ms-3"><span class="text-black me-4">SubTotal</span>@Model.Order.TotalAmount</li>
                            <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Tax(15%)</span>@(Model.Order.TotalAmount * 0.15)</li>
                        </ul>
                        <p class="text-black float-start">
                            <span class="text-black me-3"> Total Amount</span><span style="font-size: 25px;">@(Model.Order.TotalAmount)</span>
                        </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xl-10">
                        <p>Thank you for your purchase !!!</p>
                    </div>
                    <div class="col-xl-2">
                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary text-capitalize"
                                style="background-color:#60bdf3 ;">
                            Back to Home
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
